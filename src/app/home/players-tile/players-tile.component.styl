@import "../../common/styles/variables.styl"

.container
    width 100%
    height 100%

    display flex
    justify-content center
    align-items center

    .first-part
        color $main-theme-color
        font-size $huge-font-size
        width 50%
        text-align right

    .second-part
        padding-left 10px
        font-size $title-font-size
        text-transform uppercase

    @media only screen and (max-width: $media-phone), only screen and (max-device-width: $media-phone)
        flex-flow column

        .first-part
            font-size $sub-huge-font-size
            text-align center
            width auto
            line-height 1

        .second-part
            padding-left 0px
            font-size $header-font-size
            text-align center
