@import "../../common/styles/variables.styl"

.container
    width 100%
    height 100%
    padding 5px

    display flex
    justify-content center
    align-items center
    text-align center
    flex-flow column

    h1
        font-size $title-font-size
        text-transform uppercase
        padding-bottom 10px

    .games-container
        width 100%
        padding 20px 0 5px 0
        margin 0 5px
        background-color $hover-color

        .game-description
            line-height 1

            .game-name-h4
                font-weight 400
                margin-top 0.5rem

        & > div
            padding 0 20px

        & > .rsvp-title
            padding 0 30px 0 0
            margin 0
            position absolute
            right 0px
            margin-top -20px

            & > span.my-status
                font-size $uppercased-extra-small
                color $sub-color
                text-transform uppercase

            & > span.rsvp-status
                font-size $header-font-size
                color $main-theme-color
                text-transform uppercase

    @media only screen and (max-width: $media-phone), only screen and (max-device-width: $media-phone)
        .games-container
            & > .rsvp-title
                display flex
                flex-flow row wrap
                justify-content center
                align-items center
                bottom 0px
                margin-bottom 10px
                padding 0 20px 0 0
                max-width 100px
                line-height 1

                & > span.rsvp-status
                    font-size $subheader-font-size

    @media only screen and (max-width: $iphone-5), only screen and (max-device-width: $iphone-5)
        h1
            font-size $header-font-size

        .games-container
            padding 5px 0 5px 0

            h1, h2, h3, h4
                font-size 1em

            & > .rsvp-title > span.my-status
                display none
