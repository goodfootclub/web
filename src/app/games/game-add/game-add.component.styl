$sub-color = #aaa
$hover-color = #fafafa

form
    padding: 24px
    max-width: 640px
    margin: 0 auto


.locations-list
    position: absolute
    background: white
    z-index: 2
    margin-top: 12px
    padding: 0
    max-width: 592px
    display: none
    opacity: 0

    &.show
        display: block
        opacity: 1
        -webkit-animation: fadeInFromNone 0.5s ease-out;
        -moz-animation: fadeInFromNone 0.5s ease-out;
        -o-animation: fadeInFromNone 0.5s ease-out;
        animation: fadeInFromNone 0.5s ease-out;

    md-list-item:hover
        background: $hover-color

    p
        color: $sub-color
        font-size: 11px


.buttons
    display: flex
    justify-content: flex-end

    button
        margin-left: 24px

// animation
@-webkit-keyframes fadeInFromNone
    0%
        display: none
        opacity: 0
    1%
        display: block
        opacity: 0
    100%
        display: block
        opacity: 1

@-moz-keyframes fadeInFromNone
    0%
        display: none
        opacity: 0
    1%
        display: block
        opacity: 0
    100%
        display: block
        opacity: 1

@-o-keyframes fadeInFromNone
    0%
        display: none
        opacity: 0
    1%
        display: block
        opacity: 0
    100%
        display: block
        opacity: 1

@keyframes fadeInFromNone
    0%
        display: none
        opacity: 0
    1%
        display: block
        opacity: 0
    100%
        display: block
        opacity: 1
