@import "variables.styl"

md-card.mat-card
    max-width $card-width
    overflow hidden
    padding 12px
    margin 15px auto

    &:hover
        text-decoration none
        background $hover-color

    &.fixed-height
        height $card-height

    h1
        font-size $subheader-font-size
        margin 5px 0 0

    .info
        color $sub-color
        font-size $extra-small-font
        max-height 32px
        overflow hidden

// player view in card
.player
    display flex
    height $card-height
    max-width $card-width
    padding 0
    margin 0

    &:hover
        text-decoration none
        background #fafafa

    .player-info
        padding 0 12px

    h1
        font-size $subheader-font-size
        margin 5px 0 0

    .role
        color $sub-color
        font-size $extra-small-font

.player-pic
    border-radius 50%
    max-height $pic-dia  //
    max-width $pic-dia   // Workournd flexbox bug that causes avatars
    min-height $pic-dia  // to apear with random size
    min-width $pic-dia   //

// card header
.header-content
    max-width $card-width
    align-content center
    align-items center
    justify-content center
    display flex
    padding 8px 20px
    margin 15px auto
    font-size $header-font-size

    .header-text
        flex 1 1 auto
        p
            margin 0
