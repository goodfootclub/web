@import "variables.styl"

html
    font-family: Helvetica, Arial, sans-serif
    line-height 1.15
    -ms-text-size-adjust:100%
    -webkit-text-size-adjust:100%
    -webkit-box-sizing border-box
    box-sizing border-box
    -ms-overflow-style scrollbar
    -webkit-tap-highlight-color transparent

body
    font-size 1rem
    font-weight 400
    line-height 1.5
    color $general-font-color
    margin 0
    background: $general-background-color
    height: 100%
    min-width: 320px

// Let toolbar title take all available space
app-title
    flex: 1 1 auto
    text-align center

*, :after, :before
    box-sizing inherit

// Remove Chrome focus outline
*:focus
    outline none !important
    text-decoration none !important

h1
    font-size 2em
    margin 0.67em 0

h1, h2, h3, h4, h5, h6
    margin-top 0
    margin-bottom .5rem
    font-family inherit
    font-weight 500
    line-height 1.1
    color inherit

hr
    -webkit-box-sizing content-box
    box-sizing content-box
    height 0
    overflow visible
    margin-top 1rem
    margin-bottom 1rem
    border 0
    border-top 1px solid rgba(0, 0, 0, 0.1)

p
    margin-top 0
    margin-bottom 1rem

a
    text-decoration none

.full-width
    width 100%
