$main-theme-color = #2DB5FF

// overlay:
.cdk-overlay-pane.app-global-overlay
    width 100%
    height 100%
    background-color rgba(200, 200, 200, 0.5)
    display flex
    justify-content center
    align-items center

//loader on overlay:
.progress-bar
    background-color: transparent

html, body, app-root
    background: #eee
    height: 100%
    min-width: 320px

md-sidenav-container
    max-width: 1000px
    margin: auto
    box-shadow: 0px 0px 5px 0px rgba(100, 100, 100, 0.75)

md-input-container, md-select
    width: 100%

html, body
    font-family: Helvetica, Arial, sans-serif

// Remove Chrome focus outline
*:focus
    outline: none !important
    text-decoration: none !important


// Let toolbar title take all available space
app-title
    flex: 1 1 auto
    text-align: center

.toolbar-icon-spacer
    width: 40px  // md-icon-button width


// Tabs
.mat-tab-labels
    justify-content: space-around

// List item content
.mat-list-item-content
    width 100%

// Autocomplete list with full width of input
div.mat-autocomplete-panel
    max-width 100%

.main-theme-color
    color $main-theme-color

.mat-icon-button
    color $main-theme-color!important
