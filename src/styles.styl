html, body, app-root
    height: 100%
    min-width: 320px

html, body
    font-family: Helvetica, Arial, sans-serif

// Remove Chrome focus outline
*:focus
    outline: none !important
    text-decoration: none !important


// Toolbar
.toolbar-title
    flex: 1 1 auto
    text-align: center

.toolbar-icon-spacer
    width: 40px  // md-icon-button width


// Tabs
.md-tab-list
    justify-content: space-around
